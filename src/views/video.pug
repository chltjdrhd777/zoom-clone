doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        title Noom
    body 
        header
            h1 Noom Video
            h3.roomname
        main#myStream
            div#welcome
                form
                    input(placeholder="room name", required, type="text")
                    button Enter Room
                
            div#room
                video#myFace(autoplay,playsinline, width="400", height="400")
                button#mute unmuted
                button#camera camera on
                select#whichCamera
            div#peerStream
                video#yourFace(autoplay,playsinline, width="400", height="400")        

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/zoom.js")
        